{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.sortMembers": "explicit"
  },
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?_",
  "files.exclude": {
    "**/.next": true,
    "**/build": true,
    "**/coverage": true,
    "**/tmp": true,
    "**/dist": true,
    "**/jest-integration.config.d.ts": true,
    "**/jest-integration.config.js": true,
    "**/next-env.d.ts": true,
    "**/node_modules": true,
    "**/tsconfig.release.tsbuildinfo": true,
    "**/.nx": true,
    "**/api-client": true,
    "**/.terraform*": true,
    "**/terraform.tfstate*": true,
    "**/storybook-static": true
  }
}
